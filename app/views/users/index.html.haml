%h1 Welcome to the user list!

%table#userTable.tablesorter
	%thead
		%tr
			%th
				First Name
			%th
				Last Name
			%th{ colspan: 3 }

	%tbody#userBody
		- @users.each do |user|
			= render partial: 'user', locals: { user: user }

= link_to('New User', new_user_path)

:javascript
	jQuery(document).ready(function() {
		jQuery('#userTable').tablesorter();
	});